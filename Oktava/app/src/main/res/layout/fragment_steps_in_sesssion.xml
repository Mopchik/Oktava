<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF774C">

    <android.widget.LinearLayout
        android:id="@+id/chooseStepsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonStep1"
            style="@style/ButtonRoundBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:text="1" />

        <Button
            android:id="@+id/buttonStep2"
            style="@style/ButtonRoundBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="2" />

        <Button
            android:id="@+id/buttonStep3"
            style="@style/ButtonRoundBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="3" />

        <Button
            android:id="@+id/buttonStep4"
            style="@style/ButtonRoundBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="4" />

        <Button
            android:id="@+id/buttonStep5"
            style="@style/ButtonRoundBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="5" />

        <Button
            android:id="@+id/buttonStep6"
            style="@style/ButtonRoundBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="6" />

        <Button
            android:id="@+id/buttonStep7"
            style="@style/ButtonRoundBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="7" />
    </android.widget.LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/stepFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/chooseStepsContainer"/>
</androidx.constraintlayout.widget.ConstraintLayout>